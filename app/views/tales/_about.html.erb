<script>
$(document).ready(function(){
           

           window.onresize = resize;
           window.onload = initial;
             
            function resize()
            {
            console.log("viewport changed");
            initial();
            }

            function initial(){
              console.log("started");

          var viewport_width=   $(window).width();
           var viewport_height=  $(window).height();
           if(viewport_width>viewport_height){


