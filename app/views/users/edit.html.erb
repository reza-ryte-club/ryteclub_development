<%= @user.firstname %>
<%= form_for(@user, :url => { :action => "update" } ) do |f| %>
  
  <div class="action_container">
  <label class="col-sm-2 control-label"><strong>Role</strong></label>
          <div class="col-sm-10">
            <%= f.select :role_id,
             @roles.map {|r| [r.name, r.id] }, {}, {multiple: false} %>
          </div>
    <%= f.submit %>
  </div>
<% end %>